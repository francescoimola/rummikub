---
import Layout from "../layouts/Layout.astro";
import PageHeading from "../components/PageHeading.astro";
import { Text, Flex, Link, Box, DataList } from "@radix-ui/themes";

import { Image } from "astro:assets";
import francescoImg from "../assets/francesco.png";
import SkipToNav from "../components/SkipToNav.astro";
---

<Layout backgroundColor="var(--orange-5)">
    <PageHeading slot="heading">
        Designer and marketer based in Kent, England
    </PageHeading>
    <SkipToNav slot="role" display={{ initial: "none", sm: "flex" }} />
    <Box slot="description" style={{ containerType: "inline-size" }}>
        <Flex className="about-grid" align="start" gap="5">
            <Flex
                className="about-image"
                flexGrow="1"
                flexShrink="1"
                style={{
                    aspectRatio: "1",
                }}
            >
                <Image
                    src={francescoImg}
                    alt="Francesco Imola"
                    style={{
                        objectFit: "cover",
                        width: "100%",
                        height: "100%",
                    }}
                />
            </Flex>
            <Flex flexGrow="1" direction="row" justify="between">
                <DataList.Root orientation="vertical" size="2">
                    <DataList.Item>
                        <DataList.Label color="gray">Email</DataList.Label>
                        <DataList.Value>
                            <Link
                                href="mailto:hi@francescoimola.com"
                                highContrast
                                wrap="nowrap">hi@francescoimola.com</Link
                            >
                        </DataList.Value>
                    </DataList.Item>
                    <DataList.Item>
                        <DataList.Label color="gray">Location</DataList.Label>
                        <DataList.Value
                            ><Text wrap="balance"
                                >Folkestone, Kent, England</Text
                            ></DataList.Value
                        >
                    </DataList.Item>
                    <DataList.Item>
                        <DataList.Label color="gray">Status</DataList.Label>
                        <DataList.Value>
                            <Flex align="center" gap="2">
                                <Text color="grass" trim="both" mt="1"
                                    ><svg
                                        width="12"
                                        height="12"
                                        viewBox="0 0 10 10"
                                        fill="currentColor"
                                        xmlns="http://www.w3.org/2000/svg"
                                    >
                                        <circle cx="5" cy="5" r="5"></circle>
                                    </svg></Text
                                >
                                <Text wrap="balance"
                                    >Currently booking projects for Q1 2026</Text
                                >
                            </Flex>
                        </DataList.Value>
                    </DataList.Item>
                </DataList.Root>
            </Flex>
        </Flex>
    </Box>
</Layout>
