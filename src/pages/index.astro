---
/* --- Imports --- */
import ProjectCanvas from "../components/ProjectCanvas.astro";
import PageHeading from "../components/PageHeading";
import { ButtonLink } from "../components/ButtonLink.tsx";
import Layout from "../layouts/Layout.astro";
import { Text, Button, Flex, Grid, Box, Heading, Link } from "@radix-ui/themes";
import { ArrowRightIcon } from "@radix-ui/react-icons";
import { ServiceCard } from "../components/ServiceCard";

import ConsultingIcon from "../components/icons/ConsultingIcon.astro";
import WebDesignIcon from "../components/icons/WebDesignIcon.astro";
import ContentWritingIcon from "../components/icons/ContentWritingIcon.astro";
import EmailMarketingIcon from "../components/icons/EmailMarketingIcon.astro";
import MegaSeatingPlanLogo from "../components/icons/MegaSeatingPlanLogo.astro";
import Testimonial from "../components/Testimonial";
import { InnerSection } from "../components/InnerSection";
import { MainGrid } from "../components/MainGrid";
---

<Layout backgroundColor="var(--yellow-3)">
  <!-- --- Hero --- -->

  <!-- Slot: Main Heading -->
  <PageHeading slot="heading" className="page-heading">
    Thoughtful <Text as="span" color="yellow">pixels</Text> and <Text
      as="span"
      color="yellow">words</Text
    > that <Text as="span" color="orange">connect your work</Text> to the people who
    need it most
  </PageHeading>

  <!-- Slot: Job Role (Hidden on mobile) -->
  <Box slot="role" display={{ initial: "none", sm: "block" }}>
    <Text size="3" weight="medium"> Web designer and inbound marketer </Text>
  </Box>

  <!-- Slot: Introduction Text -->
  <Flex slot="description" direction="column" gap="5" width="75%">
    <Text size="3">
      Francesco Imola makes independent businesses fall in love with their
      websites once again. All thanks to unmistakeable copy, fool-proof UX, and
      a digital strategy so intentional you'll never go back to how things were.
    </Text>
    <Button size="3" highContrast style={{ alignSelf: "flex-start" }}
      >Start a project <ArrowRightIcon /></Button
    >
  </Flex>

  <!-- --- Page Content --- -->
  <Box slot="page-content" style={{ backgroundColor: "var(--gray-1)" }}>
    <!-- Main Content Grid -->
    <MainGrid>
      <!-- --- Selected Work --- -->
      <InnerSection title="Selected work">
        <Grid columns="1" gapY="8">
          <ProjectCanvas
            images={[
              "https://images.unsplash.com/photo-1460925895917-afdab827c52f",
              "https://images.unsplash.com/photo-1497215728101-856f4ea42174",
              "https://images.unsplash.com/photo-1558655146-d09347e92766",
            ]}
            title="Make & Mind"
            description="Pizza ipsum dolor meat lovers buffalo. Extra green banana fresh mushrooms red Philly wing. Meatball bacon olives tossed buffalo deep ham tomatoes."
          />
          <ProjectCanvas
            images={[
              "https://images.unsplash.com/photo-1460925895917-afdab827c52f",
              "https://images.unsplash.com/photo-1497215728101-856f4ea42174",
              "https://images.unsplash.com/photo-1558655146-d09347e92766",
            ]}
            title="Make & Mind"
            description="Pizza ipsum dolor meat lovers buffalo. Extra green banana fresh mushrooms red Philly wing. Meatball bacon olives tossed buffalo deep ham tomatoes."
          />
        </Grid>
      </InnerSection>

      <!-- --- Services --- -->
      <InnerSection title="Where I can help">
        <Grid columns="1" gap="8">
          <Grid columns="1" gap="4">
            <Heading size="3" weight="medium" as="h2" highContrast>
              Bread and butter
            </Heading>
            <Grid columns={{ initial: "1", sm: "2" }} gap="4">
              <ServiceCard title="Web Design & Development" href="/webdesign">
                <WebDesignIcon slot="icon" />
              </ServiceCard>

              <ServiceCard title="Website Consultations" href="/consultations">
                <ConsultingIcon slot="icon" />
              </ServiceCard>
            </Grid>
          </Grid>

          <Grid columns="1" gap="4">
            <Heading size="3" weight="medium" as="h2" highContrast>
              Ã€ la carte
            </Heading>
            <Grid columns={{ initial: "1", sm: "2" }} gap="4">
              <ServiceCard title="Content Writing" href="/contentwriting">
                <ContentWritingIcon slot="icon" />
              </ServiceCard>

              <ServiceCard title="Email Marketing" href="/emailmarketing">
                <EmailMarketingIcon slot="icon" />
              </ServiceCard>
            </Grid>
          </Grid>
        </Grid>
      </InnerSection>

      <!-- --- About Snippet --- -->
      <InnerSection title="About">
        <Flex direction="column" gap="6">
          <Flex direction="column" gap="3">
            <Text size="3" as="p" highContrast>
              I've spent years watching businesses of all sizes waste
              unbelievable amounts of money on erratic marketing and amateurish
              websites that confuse customers and damage their reputation.
            </Text>
            <Text size="3" as="p" highContrast>
              I can stop that from happening.
            </Text>
          </Flex>
          <ButtonLink
            href="/about"
            variant="soft"
            size="3"
            color="gray"
            highContrast
            style={{ alignSelf: "flex-start" }}
          >
            More about how I work <ArrowRightIcon />
          </ButtonLink>
        </Flex>
      </InnerSection>

      <!-- --- Testimonials --- -->
      <InnerSection title="Happy Clients">
        <Grid columns="1" gap="var(--space-10)">
          <Testimonial
            authorName="Rob Cowen"
            quote="Francesco has the rare talent of being able to embed himself in a niche that he previously knew nothing about, quickly understanding the intricacies and writing with the confidence of an insider"
            rating={5}
            client:idle
          >
            <aside slot="authorRole">
              Founder, <Link href="https://seatingplan.com"
                >Mega Seating Plan</Link
              >
            </aside>
            <MegaSeatingPlanLogo slot="logo" />
          </Testimonial>
          <Testimonial
            authorName="Rob Cowen"
            quote="Francesco has the rare talent of being able to embed himself in a niche that he previously knew nothing about, quickly understanding the intricacies and writing with the confidence of an insider"
            rating={5}
            client:idle
          >
            <aside slot="authorRole">
              Founder, <Link href="https://seatingplan.com"
                >Mega Seating Plan</Link
              >
            </aside>
            <MegaSeatingPlanLogo slot="logo" />
          </Testimonial>
          <Testimonial
            authorName="Rob Cowen"
            quote="Francesco has the rare talent of being able to embed himself in a niche that he previously knew nothing about, quickly understanding the intricacies and writing with the confidence of an insider"
            rating={5}
            client:idle
          >
            <aside slot="authorRole">
              Founder, <Link href="https://seatingplan.com"
                >Mega Seating Plan</Link
              >
            </aside>
            <MegaSeatingPlanLogo slot="logo" />
          </Testimonial>
        </Grid>
      </InnerSection>
    </MainGrid>
  </Box>
</Layout>
