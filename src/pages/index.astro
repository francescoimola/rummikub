---
import Layout from "../layouts/Layout.astro";
import { Heading, Text, Button, Flex } from "@radix-ui/themes";
---

<Layout backgroundColor="var(--yellow-3)">
  <Heading
    slot="heading"
    as="h1"
    size="8"
    weight="medium"
    highContrast
    trim="both"
  >
    Thoughtful pixels and words that connect your work to the people who need it
    most
  </Heading>
  <Text slot="role" size="3" weight="medium" color="gray">
    Web designer and inbound marketer
  </Text>
  <Flex slot="description" direction="column" gap="5">
    <Text size="3" color="gray" wrap="pretty">
      Francesco Imola builds clearer websites and writes unignorable content to
      set small businesses apart and make them feel in control, again.
    </Text>
    <Button size="3" highContrast style={{ alignSelf: "flex-start" }}
      >Start a project â†’</Button
    >
  </Flex>
</Layout>
