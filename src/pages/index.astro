---
import ProjectCanvas from "../components/ProjectCanvas.astro";
import Layout from "../layouts/Layout.astro";
import {
  Heading,
  Text,
  Button,
  Flex,
  Container,
  Grid,
  Box,
} from "@radix-ui/themes";
import { ArrowRightIcon } from "@radix-ui/react-icons";
---

<Layout backgroundColor="var(--yellow-3)" withSignupForm>
  <Heading
    slot="heading"
    as="h1"
    size="8"
    weight="medium"
    highContrast
    trim="both"
  >
    Thoughtful pixels and words that connect your work to the people who need it
    most
  </Heading>
  <Text slot="role" size="3" weight="medium" color="gray">
    Web designer and inbound marketer
  </Text>
  <Flex slot="description" direction="column" gap="5" width="75%">
    <Text size="3" color="gray" wrap="pretty">
      Francesco Imola makes independent businesses fall in love with their
      websites once again. All thanks to unmistakeable copy, fool-proof UX, and
      a digital strategy so intentional you'll never go back to how things were.
    </Text>
    <Button size="3" highContrast style={{ alignSelf: "flex-start" }}
      >Start a project <ArrowRightIcon /></Button
    >
  </Flex>

  <Box
    slot="page-content"
    style={{ backgroundColor: "var(--gray-1)" }}
    px={{ initial: "var(--section-px-initial)", sm: "var(--section-px-sm)" }}
  >
    <Container maxWidth="var(--max-cw)">
      <Grid
        columns={{ initial: "1", sm: "2" }}
        gapY="var(--space-10)"
        gapX="4"
        px={{
          initial: "var(--section-px-initial)",
          sm: "var(--section-px-sm)",
        }}
        py="var(--space-10)"
      >
        {/* Projects Section Header */}
        <Flex gap="4" align="start" className="section-header">
          <Text
            size="3"
            weight="medium"
            highContrast
            style={{ letterSpacing: "-0.032px" }}>Selected work</Text
          >
        </Flex>

        <ProjectCanvas />
      </Grid>
    </Container>
  </Box>
</Layout>
